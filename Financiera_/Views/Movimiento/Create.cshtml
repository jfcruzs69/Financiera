@model Financiera_.Models.DB.Movimiento

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> tipoMovimiento = (List<SelectListItem>)ViewBag.tipoMovimiento;
    int idCta = ViewBag.idCuenta;
}

<h1>Alta</h1>

<h4>Movimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdTipoMovimiento" class="control-label"></label>
                @*<select asp-for="IdTipoMovimiento" class ="form-control" asp-items="ViewBag.IdTipoMovimiento"></select>*@
                @Html.DropDownList("tipoMovimiento", tipoMovimiento, "Seleccione un tipo de Movimiento", new { @class = "form-control", @required = "required" })
            </div>
            <div class="form-group">
                @*<label asp-for="IdCuenta" class="control-label"></label>*@
                @*<select asp-for="IdCuenta" class ="form-control" asp-items="ViewBag.IdCuenta"></select>*@
                <input type="hidden" asp-for="IdCuenta" value="@idCta" class="form-control" asp-items="ViewBag.IdCuenta"></input>
            </div>
            <div class="form-group">
                <label asp-for="Referencia" class="control-label"></label>
                <input asp-for="Referencia" class="form-control" required />
                <span asp-validation-for="Referencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaMovimiento" class="control-label"></label>
                <input asp-for="FechaMovimiento" class="form-control" required />
                <span asp-validation-for="FechaMovimiento" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="FechaAlta" class="control-label"></label>
                <input asp-for="FechaAlta" class="form-control" />
                <span asp-validation-for="FechaAlta" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                @*<label asp-for="IdUsuarioAlta" class="control-label"></label>*@
                <input type="hidden" name="IdUsuarioAlta" id="IdUsuarioAlta" value="1" class="form-control" />
                @*<span asp-validation-for="IdUsuarioAlta" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input type="number" asp-for="Importe" class="form-control" required />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
                <input type="number" asp-for="Cargo" class="form-control" readonly />
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abono" class="control-label"></label>
                <input type="number" asp-for="Abono" class="form-control" readonly />
                <span asp-validation-for="Abono" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Aplicar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

